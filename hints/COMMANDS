//task: set 1 for i-th bit of a number//

   int n = 5, i, a, result;         // n = 5 ==> 0101
   cin >> i; 
   a = (1 << i);                    // for i = 1, result = 7   0111
   result = n | a;                  // for i = 2, result = 5   0101
   cout << result << endl;          // for i = 3, result = 13  1101

(and) == & = *          (or) == | = +         (xor) == ^

a = (1 << i);
n |= a;
cout << n << endl;




INVERTION  "~"
int a = 5;                          //  00000101 = 5
int b = ~(a);
cout << b << endl;                  //  11111010 = 250


 
 
 
 
 
 
 Conditional Statements (Услоыне оператора)

if (condition) {         
}else{                      
}            

Example:   
if (a > b) {
  cout << "a > b";
} 
else if (b > a) {
  cout << "b > a";              
}  
else{
  cout << "they're equal";
}




